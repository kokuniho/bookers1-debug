<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch, local:true do |f| %>
   <%= f.text_field :title %>
   <%= @book.title %>
   <%= f.text_field :body %>
   <%= @book.body %>

<form>
<%= f.submit "Update Book", class: 'btn btn-success btn-sm' %>
</form>
 <% end %>

<%= link_to 'Show', @book, class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
